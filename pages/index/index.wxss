/* pages/index/index.wxss */
.index_item{
  height: 300rpx;
  width: 500rpx;
  box-shadow: 0 0 10rpx black;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
  font-weight: bolder;
  border-radius: 20rpx;
  border: 10rpx solid #fff;
}

.create_room{
  width: 600rpx;
  height: 450rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 150rpx;
  margin: auto;
  z-index: 2;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
}
.create_room_bottom{
  width: 600rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.create_room_bottom button{
  width: 150rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 人数选择轮盘 */
.picker_box {
  width: 500rpx;
  height: 130rpx;
  perspective: 800rpx;
  -webkit-perspective: 800rpx;
  position: relative;
  box-shadow: inset 0 0 20rpx #000;
  border-radius: 10rpx;
  background-color: #ececfb;
}
.numpicker {
  width: 450rpx;
  height: 130rpx;
  transform-style: preserve-3d;
  -webkit-transform-style: preserve-3d;
  position: absolute;
  top: -2rpx;
  left: 25rpx;
  backface-visibility: hidden;
  -webkit-backface-visibility:hidden;	/* Chrome 和 Safari */
  -moz-backface-visibility:hidden; 	/* Firefox */
  -ms-backface-visibility:hidden; 	/* Internet Explorer */
}

.numpicker view {
  width: 128rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, 1);
  border-radius: 10rpx;
  position: absolute;
  top: 30rpx;
  left: 160rpx;
  text-align: center;
  backface-visibility: hidden;
  -webkit-backface-visibility:hidden;	/* Chrome 和 Safari */
  -moz-backface-visibility:hidden; 	/* Firefox */
  -ms-backface-visibility:hidden; 	/* Internet Explorer */
  font-size: 60rpx;
}
.numpicker view:nth-child(1) {
  transform: rotateY(0deg) translateZ(200rpx);
  -webkit-transform: rotateY(0deg) translateZ(200rpx);
  -moz-transform: rotateY(0deg) translateZ(200rpx);
  -ms-transform: rotateY(0deg) translateZ(200rpx);
  -o-transform: rotateY(0deg) translateZ(200rpx);
}
